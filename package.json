{
  "name": "trax",
  "homepage": "./",
  "author": "Unicorn LLC <hello@unicorn.xxx>",
  "description": "A desktop application for managing Github Projects",
  "version": "0.0.2",
  "private": true,
  "main": "main/electron.js",
  "productName": "Trax",
  "repository": "https://github.com/Unicorn/Trax",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "MODE=development NODE_PATH=./renderer concurrently 'yarn start' 'yarn electron:start'",
    "start": "webpack-serve ./config/webpack.config.js --https-cert ./config/localhost.cert --https-key ./config/localhost.key",
    "electron:start": "tsc main/*.ts && electron .",
    "preelectron:build": "tsc main/*.ts && webpack --config ./config/webpack.config.js",
    "electron:build": "build -c.extraMetadata.main=build/electron.js -mwl -p never"
  },
  "lint-staged": {
    "*.{ts,js,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "appId": "xxx.unicorn.trax",
    "directories": {
      "buildResources": "public/icons"
    },
    "files": [
      "build/**/*",
      "build/icon.*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "zip"
    }
  },
  "dependencies": {
    "fuse.js": "^3.2.0",
    "humps": "^2.0.1",
    "localforage": "^1.7.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-select": "^1.2.1",
    "redux-persist": "^5.9.1",
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "@types/humps": "^1.1.2",
    "@types/react": "^16.4.4",
    "@types/react-beautiful-dnd": "^7.1.0",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^6.0.3",
    "@types/react-relay": "^1.3.5",
    "@types/react-router-config": "^1.0.6",
    "@types/react-router-dom": "^4.2.6",
    "@types/react-select": "^1.2.6",
    "awesome-typescript-loader": "^5.0.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "electron-builder": "^20.18.0",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "lint-staged": "^7.1.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "typescript": "^2.8.3",
    "webpack": "^4.13.0",
    "webpack-cli": "^3.0.8",
    "webpack-serve": "^1.0.2"
  }
}
