{
  "name": "tracks",
  "homepage": "./",
  "author": "Unicorn LLC <hello@unicorn.xxx>",
  "description": "A desktop application for managing Github Projects",
  "version": "0.0.2",
  "private": true,
  "main": "main/electron.js",
  "productName": "Trax",
  "repository": "https://github.com/Unicorn/Trax",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently 'yarn electron:watch' 'yarn relay:watch' 'yarn start'",
    "start": "NODE_PATH=./renderer webpack-serve ./config/webpack.config.js",
    "preelectron:build": "NODE_PATH=./renderer webpack -p --config config/webpack.config.js",
    "electron:build": "build -c.extraMetadata.main=build/electron.js -mwl -p never",
    "electron:watch": "electron .",
    "relay:build": "relay-compiler --src ./renderer --schema ./schema.json --extensions ts tsx js",
    "relay:watch": "yarn relay:build --watch",
    "setup": "yarn install && graphql get-schema"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --single-quote --no-semi",
      "git add"
    ]
  },
  "build": {
    "appId": "xxx.unicorn.trax",
    "directories": {
      "buildResources": "public/icons"
    },
    "files": [
      "build/**/*",
      "build/icon.*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "zip"
    }
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "fuse.js": "^3.2.0",
    "localforage": "^1.6.0",
    "react": "^16.2.0",
    "react-beautiful-dnd": "^6.0.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-relay": "^1.5.0",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-select": "^1.2.1",
    "redux": "^3.7.2",
    "redux-api": "^0.11.2",
    "redux-form": "^7.3.0",
    "redux-persist": "^5.9.1",
    "redux-thunk": "^2.2.0",
    "relay-runtime": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-react": "^7.0.0-beta.42",
    "@babel/preset-typescript": "^7.0.0-beta.42",
    "@types/react": "^16.0.40",
    "@types/react-beautiful-dnd": "^4.0.0",
    "@types/react-dom": "^16.0.4",
    "@types/react-redux": "^5.0.15",
    "@types/react-relay": "^1.3.4",
    "@types/react-router-config": "^1.0.6",
    "@types/react-router-dom": "^4.2.5",
    "@types/react-select": "^1.2.5",
    "@types/redux-form": "^7.2.2",
    "@types/redux-persist": "^4.3.1",
    "@types/redux-thunk": "^2.1.0",
    "awesome-typescript-loader": "^5.0.0-1",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-relay": "^1.5.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "dotenv-webpack": "^1.5.5",
    "electron": "^1.8.4",
    "electron-builder": "^20.6.2",
    "electron-devtools-installer": "^2.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "graphql": "^0.13.2",
    "graphql-cli": "^2.15.8",
    "html-webpack-plugin": "^3.0.7",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "prop-types": "^15.6.1",
    "relay-compiler": "^1.5.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-serve": "^0.2.0"
  },
  "jest": {
    "setupFiles": [
      "./config/jest.setup.js"
    ],
    "moduleDirectories": [
      "./node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "typescript-babel-jest"
    }
  }
}
