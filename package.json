{
  "name": "trax",
  "homepage": "./",
  "author": "Unicorn LLC <hello@unicorn.xxx>",
  "description": "A desktop application for managing Github Projects",
  "version": "0.1.0",
  "private": true,
  "main": "main/electron.js",
  "productName": "Trax",
  "repository": "https://github.com/Unicorn/Trax",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "MODE=development NODE_PATH=./renderer concurrently 'yarn start' 'yarn electron:start'",
    "start": "webpack-serve ./config/webpack.config.js --https-cert ./config/localhost.cert --https-key ./config/localhost.key",
    "electron:start": "tsc main/*.ts && electron .",
    "preelectron:build": "tsc main/*.ts && webpack --config ./config/webpack.config.js",
    "electron:build": "build -c.extraMetadata.main=build/electron.js -mwl -p never"
  },
  "lint-staged": {
    "*.{ts,js,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "appId": "xxx.unicorn.trax",
    "directories": {
      "buildResources": "public/icons"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "zip"
    }
  },
  "dependencies": {
    "@types/lodash": "^4.14.120",
    "@types/react-rte": "^0.16.0",
    "@types/redux-form": "^7.4.16",
    "electron-is-dev": "^1.0.1",
    "fuse.js": "^3.3.0",
    "humps": "^2.0.1",
    "localforage": "^1.7.3",
    "lodash": "^4.17.11",
    "normalizr": "^3.3.0",
    "react": "^16.8.0-alpha.1",
    "react-beautiful-dnd": "^10.0.4",
    "react-dom": "^16.8.0-alpha.1",
    "react-redux": "5.1.1",
    "react-router": "^4.2.0",
    "react-rte": "^0.16.1",
    "react-select": "^2.3.0",
    "redux-persist": "^5.9.1",
    "redux-saga": "^1.0.0"
  },
  "devDependencies": {
    "@types/humps": "^1.1.2",
    "@types/react": "^16.7.22",
    "@types/react-beautiful-dnd": "^10.0.1",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^7.0.1",
    "@types/react-relay": "^1.3.10",
    "@types/react-router-config": "^1.1.0",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-select": "^2.0.11",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.3",
    "electron-builder": "^20.38.5",
    "electron-debug": "^2.1.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.12.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "lint-staged": "^8.1.1",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-serve": "^2.0.3"
  }
}
